<section class="comments">
  <h1><%= I18n.t("titles.comments.index") %></h1>
  <%= render "comments/form", :commentable => commentable %>

  <% commentable.comments.each do |comment| %>
    <div class="row-fluid">
      <%= render "comments/show", :commentable => commentable, :comment => comment %>
    </div>
  <% end %>
</section>