<%= form_for(@event, :url => url, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= render "shared/error_messages", :record => @event %>

  <div class="control-group">
    <%= f.label :name, t("labels.event.name"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :placeholder => t("placeholder.events.name"), :class => "span8" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :edition, t("labels.event.edition"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :edition, :placeholder => t("placeholder.events.edition"), :class => "span4" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, t("labels.event.description"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :placeholder => t("placeholder.events.description"), :rows => 5, :class => "span8" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :stocking, t("labels.event.stocking"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stocking, :class => "span2" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :start_date, t("labels.event.start_date"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_date, :class => "span2 date" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :end_date, t("labels.event.end_date"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_date, :class => "span2 date" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :deadline_date_enrollment, t("labels.event.deadline_date_enrollment"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :deadline_date_enrollment, :class => "span2 date" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :place, t("labels.event.place"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :place, :placeholder => t("placeholder.events.place"), :class => "span8" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :street, t("labels.event.street"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street, :placeholder => t("placeholder.events.street"), :class => "span8" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :district, t("labels.event.district"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :district, :placeholder => t("placeholder.events.district"), :class => "span4" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :city, t("labels.event.city"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :placeholder => t("placeholder.events.city"), :class => "span4" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :state, t("labels.event.state"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :placeholder => t("placeholder.events.state"), :class => "span4" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :country, t("labels.event.country"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country, :placeholder => t("placeholder.events.country"), :class => "span4" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tags, t("labels.event.tags"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags, :placeholder => t("placeholder.events.tags"), :class => "span8" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :to_public, t("labels.event.to_public"), :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :to_public %>
      <span class="help-inline"><%= t("new.event.help.to_public") %></span>
    </div>
  </div>

  <%= render "shared/invite_user", :model => @event, :users => @organizers, :key => "organizer" %>

  <%= render "shared/invite_group", :model => @event, :groups => @groups %>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          events_path, :class => 'btn' %>
  </div>

  <span id="user_in_the_list"><%= t("new.invite.js.the_user_is_already_in_the_list") %></span>
  <span id="remove"><%= t("new.invite.js.remove") %></span>
<% end %>

<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
