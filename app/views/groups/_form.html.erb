<%= form_for(@group, :url => url, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= render "shared/error_messages", :record => @group %>

  <div class="control-group">
    <%= f.label :gravatar_url, t("labels.group.gravatar_url"), :class => 'control-label' %>
    <div class="controls">
      <%= f.url_field :gravatar_url, :placeholder => t("placeholder.groups.gravatar_url"), :class => "span8" %>
      <span class="help-block"><%= t("new.group.help.gravatar_url") %></span>
      <span id="searching_group" class="text-info"><%= t("new.group.searching") %></span>
      <span id="group_not_found" class="text-error"><%= t("new.group.not_found") %></span>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, t("labels.group.name"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => "span8" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tags, t("labels.group.tags"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags, :placeholder => t("placeholder.groups.tags"), :class => "span8" %>
    </div>
  </div>

  <%= render "shared/invite_user", :model => @group, :users => @members, :key => "member" %>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          groups_path, :class => 'btn' %>
  </div>

  <%= f.hidden_field :thumbnail_url %>
  
  <span id="user_in_the_list"><%= t("new.invite.js.the_user_is_already_in_the_list") %></span>
  <span id="remove_user"><%= t("new.invite.js.remove_user") %></span>
<% end %>