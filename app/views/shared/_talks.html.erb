<%= paginate @talks %>

<% @talks.each do |talk| %>
  <hr class="featurette-divider">

  <div class="featurette">
    <% thumb = talk.thumbnail.blank? ? "without_presentation.jpg" : talk.thumbnail %>

    <%= image_tag thumb, :class => "featurette-image pull-left img-polaroid" %>

    <h3 class="featurette-heading"><%= link_to talk.title, talk_path(talk) %></h3>
    
    <p class="lead">
      <% if show_user %>
        <% talk.users.each do |user| %>
          <%= render "shared/user", :user => user %><br/>
        <% end %>
      <% end %>

      <%= t("talk.created_time", :time => time_ago_in_words(talk.created_at)) %><br/>
      
      <strong>Tags:</strong> <%= talk.tags %>

      <% talk.users.each do |user| %>
        <% if logged_in? && user.id == current_user.id %>
          <br/>
          <strong><%= t("show.talk.to_public") %>:</strong> <%= talk.to_public ? t("show.talk._yes") : t("show.talk._no") %><br/>
        <% end %>
      <% end %>

      <% if talk.thumbnail.blank? %>
        <p class="text-warning"><%= t("show.talk.without_presentation") %></p>
      <% end %>
    </p>
  </div>
  <br/>
<% end %>

<hr class="featurette-divider">

<%= paginate @talks %>