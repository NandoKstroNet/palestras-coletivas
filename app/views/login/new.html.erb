<h1><%= t("titles.login.new") %></h1>
<p>
  <%= t("login.about_html", :url => new_user_path) %>
</p>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email, t("labels.user.email") %>
    <%= email_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password, t("labels.user.password") %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag t("form.submit.login") %>
    <%= link_to t("actions.back"), root_path %>
  </p>
<% end %>