<div class="talk-details">
  <% if @talk %>
    <h1><%= @talk.title %></h1>

    <iframe src="http://www.slideshare.net/slideshow/embed_code/<%= @talk.code %>" width="427" height="356" frameborder="0" marginwidth="0" marginheight="0" scrolling="no" style="border:1px solid #CCC;border-width:1px 1px 0;margin-bottom:5px" allowfullscreen webkitallowfullscreen mozallowfullscreen> </iframe> <div style="margin-bottom:5px"> <strong> <a href="<%= @talk.presentation_url %>" title="<%= @talk.title %>" target="_blank">Compartilhe!</a> </strong> from <strong><a href="<%= @talk.presentation_url %>" target="_blank"><%= @talk.user.name %></a></strong> </div>

    <p>
      <%= t("show.talk.tags") %>: <%= @talk.tags %>
    </p>

    <p>
      <%= t("show.talk.to_public") %>: <%= @talk.to_public ? t("show.talk._yes") : t("show.talk._no") %>
    </p>

    <p>
      <%= t("show.talk.description") %><br/>
      <%= simple_format @talk.description %>
    </p>
  <% else %>
    <h1><%= t("show.talk.not_public") %></h1>  
  <% end %>
</div>