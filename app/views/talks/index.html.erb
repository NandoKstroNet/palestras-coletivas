<% unless @talks.empty? %>
  <h1><%= t("index.talk.my_talks") %></h1>

  <% @talks.each do |talk| %>
    <article class="talk">
      <h2><%= link_to talk.title, talk_path(talk) %></h2>
      
      <%= t("talk.created_time", :time => time_ago_in_words(talk.created_at)) %>
      
      <ul class="meta">
        <div>
          <%= image_tag talk.thumbnail %>
        </div>
      </ul>
    </article>
  <% end %>
<% else %>
  <h1><%= t("index.talk.no_talks") %></h1>
<% end %>