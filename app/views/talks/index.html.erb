<% if logged_in? %>
  <%= link_to t("actions.new"), new_talk_path, :class => "btn btn-primary" %>
  <br />
<% end %>

<% unless @talks.blank? %>
  <h1><%= t("index.talk.my_talks") %> (<%= @talks.count %>)</h1>
  
  <%= render "shared/talks", :show_user => false %>

<% else %>
  <h1><%= t("index.talk.no_talks") %></h1>
<% end %>