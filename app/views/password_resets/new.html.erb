<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <div class="row-fluid">
        <div class="span4">
          <h1><%= t("titles.users.reset_password") %></h1>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_tag password_resets_path, :method => :post do %>
  <div class="control-group">
    <%= label_tag :email, t("labels.user.email"), :class => 'control-label' %>
    <div class="controls">
      <%= email_field_tag :email, params[:email], :class => "m-wrap m-ctrl-large" %>
    </div>
  </div>

  <div class="m-btn-strip">
    <%= submit_tag t("form.submit.reset_password"), :class => 'm-btn blue' %>
  </div>
<% end %>
